extends layout
		
block container
		div.container
			-if(currentURL=='')
				div.row
					div.span5 
						h3 Find the clothes you've always wanted
						p Upload a picture displaying the object of your desire. Our users will be happy to help you out by tagging the picture with links to shops selling this fine garment.

					div.offset2.span5
						h3 Help others to find cool clothes
						p You know where to buy the hat on that picture? Tell us and others will be just as happy to help you
			div.row
				p
		div.container
			-if(images.length!=0)
				-for (var i=0; i<images.length; i++) 

					- if ((i%4) == 0)
						div.row
							-for(var j=0; j<4 && (i+j) < images.length; j++)
								div.span3
									a(href='/images/' + images[i+j].filename) 
										h2= images[i+j].title
										img(src='http://www.clothtag.99k.org/' + images[i+j].filename)
									-if(j == 3) i=i+j
			-else 
				p You don't have any images