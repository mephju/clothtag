div#tag-dialog.modal.hide.fade(
	tabindex="-1", 
	role="dialog",
	aria-labelledby="tag-dialog-label",
	aria-hidden="true")
	
	div.modal-header
		button(
			type="button", 
			class="close",
			data-dismiss="modal",
			aria-hidden="true")  x
		h3#tag-dialog-label Tag Clothes
	
	div.modal-body

		form#tag-dialog-form
			input#tag-link(type='text', name='link', placeholder='Link')
			input#tag-title(type='text', name='title', placeholder='Title')
	
				
	

	div.modal-footer
		button(
			id="tag-cancel",
			class="btn",
			type="button",
			data-dismiss="modal",
			aria-hidden="true") Cancel
		button.btn.btn-primary(id="tag-submit") Submit

			