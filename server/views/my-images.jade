extends layout


block container
	div.container.under-navbar
		h1 Hello user
	div.container


		-for (var i=0; i<images.length; i++) 

			- if ((i%4) == 0)
				div.row
					-for(var j=0; j<4 && (i+j) < images.length; j++)
						div.span3
							a(href='/images/' + images[i+j].filename) 
								h2= images[i+j].title
								img(src='http://www.clothtag.99k.org/' + images[i+j].filename)
							-if(j == 3) i=i+j
