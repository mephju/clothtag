!!!
html
	head
		
		link(rel='stylesheet', href='/libs/bootstrap/css/bootstrap.css')
		link(rel='stylesheet', href='/css/basic.css')
		link(rel='stylesheet', href='/css/style.css')
		script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js')
		script(type='text/javascript', src='http://ajax.aspnetcdn.com/ajax/jquery.validate/1.10.0/jquery.validate.js')

		script(type='text/javascript')
			$(document).ready(function(){
			$("#validation").validate();
			});

		title= title
	body
		include header

		

		div.container
			h2= title
			form(action='/login-success', method='POST', enctype="multipart/form-data", class="form-horizontal", id="validation")
				div.control-group
					label(class='control-label', for='inputEmail') Email
					div.controls
				
						input(type='text', name='email', placeholder='Email', class='required email')
						
					
				div.control-group
					label(class='control-label', for='inputEmail') Password
					div.controls
						input.required(type='password', name='pass', placeholder='Password')

				div.control-group
					div.controls
						button.btn.btn-primary(type='submit') Submit